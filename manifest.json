
{
  "manifest_version": 3,
  "name": "Hello World",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Hello World"
  },
  "permissions": [
    "contextMenus",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
